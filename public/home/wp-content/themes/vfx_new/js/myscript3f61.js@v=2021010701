	if($(".country_tag").length>0)
	{
		$(".country_form select").change(function(){
			if($(this).val()=="Brunei Darussalam"||$(this).val()=="Cambodia"||$(this).val()=="Timor-Leste"||$(this).val()=="Indonesia"||$(this).val()=="Lao People's Democratic Republic"||$(this).val()=="Malaysia"||$(this).val()=="Philippines"||$(this).val()=="Singapore"||$(this).val()=="Thailand"||$(this).val()=="Vietnam"||$(this).val()=="Hong Kong"||$(this).val()=="Taiwan, Province Of China"){
				$(".country_tag input").val("aisa");
			}else if($(this).val()=="Algeria"||$(this).val()=="Bahrain"||$(this).val()=="Egypt"||$(this).val()=="Iran"||$(this).val()=="Iraq"||$(this).val()=="Israel"||$(this).val()=="Jordan"||$(this).val()=="Kuwait"||$(this).val()=="Lebanon"||$(this).val()=="Libya"||$(this).val()=="Morocco"||$(this).val()=="Oman"||$(this).val()=="Qatar"||$(this).val()=="Saudi Arabia"||$(this).val()=="Syria"||$(this).val()=="Tunisia"||$(this).val()=="United Arab Emirates"||$(this).val()=="Palestine"||$(this).val()=="Yemen"){
				$(".country_tag input").val("mena");
			}else{
				$(".country_tag input").val("other");
			}
		});
	}


	$(window).on('load',function(){
		fixedH();
		showSc();
		resetH();
		home_row6_render();
		home_row8_render();
		accounts_proecn_step_render();
	});

	$(window).resize(function () {
		home_row6_render();
		home_row8_render();
		showSc();
		accounts_proecn_step_render();
		resetH();
	});

	$(window).scroll(function () {
		fixedH();
		showSc();
	});


});