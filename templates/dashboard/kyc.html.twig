{% extends 'base.html.twig' %}
{% block title %}
    Verify Your Account
{% endblock %}

{% block main %}
      <!-- App Capsule -->
    <div id="appCapsule">
        
        <div class="section mt-2">
            <div class="card">
                <div class="card-body" style="background-color:#191919; color:#f2f2f2; border-radius:10px;">
                    <div class="p-1">
                        <div class="text-center">
                            <h2 class="text-primary">Kyc Verification</h2>
                            <p>Fill the form to Verify Account</p>
                        </div>
                        <form method="post" action={{ path('verify') }} enctype="multipart/form-data">
                            <div class="form-group basic animated">
                                <div class="input-wrapper">
                                    <label class="label" for="name2">Full Name</label>
                                    <input type="text" class="form-control" style="color:#f2f2f2;" name="fullname" value="Jay Will" id="name2" disabled>
                                    <i class="clear-input">
                                        <ion-icon name="close-circle"></ion-icon>
                                    </i>
                                </div>
                            </div>
                            <div class="form-group basic animated">
                                <div class="input-wrapper">
                                    <label class="label" for="name2">Username</label>
                                    <input type="text" class="form-control" required="required" style="color:#f2f2f2;" name="username" value="wil222" id="name2" disabled>
                                    <i class="clear-input">
                                        <ion-icon name="close-circle"></ion-icon>
                                    </i>
                                </div>
                            </div>

                            <div class="form-group basic animated">
                                <div class="input-wrapper">
                                    <label class="label" for="email2">E-mail</label>
                                    <input type="email" class="form-control" required="required" style="color:#f2f2f2;" name="email" value="will222@gmail.com" id="email2" disabled>
                                    <i class="clear-input">
                                        <ion-icon name="close-circle"></ion-icon>
                                    </i>
                                </div>
                            </div>
                                                        <div class="form-group basic animated">
                                <div class="input-wrapper">
                                    <label class="form-check-label">Front Of Valid Id card:</label>
                                    <input type="file" class="form-control" style="color:#f2f2f2;" name="idcardFront" accept="image/*">
                                    
                                    <i class="clear-input">
                                        <ion-icon name="close-circle"></ion-icon>
                                    </i>
                                </div>
                            </div>
                                                        <div class="form-group basic animated">
                                <div class="input-wrapper">
                                    <label class="form-check-label">Back Of The Mentioned above</label>
                                    <input type="file" class="form-control" style="color:#f2f2f2;" name="idcardBack" accept="image/*">
                                    
                                    <i class="clear-input">
                                        <ion-icon name="close-circle"></ion-icon>
                                    </i>
                                </div>
                            </div>

                            <div class="mt-2">
                                <button type="submit" name="verify_account" class="btn btn-primary btn-lg btn-block">Submit</button>
                            </div>

                        </form>
                                            </div>
                </div>
            </div>
        </div>

    </div>
    <!-- * App Capsule -->
{% endblock %}