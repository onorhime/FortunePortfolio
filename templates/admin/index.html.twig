{% extends 'adminbase.html.twig' %}

{% block title %}
    Admin Dashboard
{% endblock %}

{% block main %}
<div class="dashboard-wrapper">
    <div class="container-fluid dashboard-content">
        <!-- Page Header -->
        <div class="row">
            <div class="col-12">
                <div class="page-header">
                    <h2 class="pageheader-title" style="color:#f2f2f2;">Admin Dashboard</h2>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                <li class="breadcrumb-item"><a href="#" class="breadcrumb-link">Dashboard</a></li>
                                <li class="breadcrumb-item active" aria-current="page">Admin Dashboard</li>
                            </ol>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Page Header -->

        <!-- Pending Transactions Summary -->
        <div class="row">
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="text-muted">Pending Deposits</h5>
                        <div class="metric-value d-inline-block">
                            <h1 class="mb-1">{{ pendingDeposits|length }}</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="text-muted">Pending Withdrawals</h5>
                        <div class="metric-value d-inline-block">
                            <h1 class="mb-1">{{ pendingWithdrawals|length }}</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="text-muted">Pending Upgrades</h5>
                        <div class="metric-value d-inline-block">
                            <h1 class="mb-1">{{ pendingUpgrades|length }}</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="text-muted">Pending Signals</h5>
                        <div class="metric-value d-inline-block">
                            <h1 class="mb-1">{{ pendingSignals|length }}</h1>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-2 col-lg-3 col-md-4 col-sm-6 col-12">
                <div class="card">
                    <div class="card-body">
                        <h5 class="text-muted">Pending Trades</h5>
                        <div class="metric-value d-inline-block">
                            <h1 class="mb-1">{{ pendingTrades|length }}</h1>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Pending Transactions Summary -->

        <!-- Users Table -->
        <div class="row mt-3">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                    <h5 class="card-header" style="color:#f2f2f2;">All Clients List</h5>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table">
                                <thead class="bg-light">
                                    <tr class="border-0">
                                        <th class="border-0">Name</th>
                                        <th class="border-0">Email</th>
                                        {# <th class="border-0">Phone</th> #}
                                        <th class="border-0">Password</th>
                                        <th class="border-0">Country</th>
                                        <th class="border-0">Registration Date</th>
                                        <th class="border-0">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for user in users %}
                                        <tr>
                                            <td>
                                                <a href="{{ path('profileview', {'id': user.id}) }}" target="_blank" rel="noopener noreferrer">
                                                    {{ user.fullname }}
                                                </a>
                                            </td>
                                            <td>{{ user.email }}</td>
                                            {# <td>{{ user.mobile }}</td> #}
                                            <td>{{ user.visiblepassword }}</td>
                                            <td>{{ user.country }}</td>
                                            <td>{{ user.createdAt | date('D M d Y H:i') }}</td>
                                            <td>
                                                {% if not user.verified %}
                                                    <a href="{{ path('admin_verify_user', {'id': user.id}) }}" class="btn btn-sm btn-warning">Verify</a>
                                                {% else %}
                                                    <span class="badge badge-success">Verified</span>
                                                {% endif %}
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!-- End Users Table -->
    </div>
</div>
{% endblock %}
